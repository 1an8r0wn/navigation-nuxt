generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model category {
  id                    Int      @id @default(autoincrement())
  name                  String   @unique(map: "Category_name_key") @db.VarChar(255)
  description           String?  @db.VarChar(255)
  sort                  Int      @unique(map: "Category_sort_key")
  is_secondary_category Boolean  @default(false)
  is_sensitive          Boolean  @default(false)
  visibility            Boolean  @default(true)
  delete_flag           Boolean  @default(false)
  createdAt             DateTime @default(now())
  updatedAt             DateTime
  site                  site[]
}

model option {
  name  String  @unique(map: "Option_name_key") @db.VarChar(255)
  value String? @db.VarChar(255)
}

model site {
  id            Int      @id @default(autoincrement())
  name          String   @db.VarChar(255)
  description   String?  @db.VarChar(255)
  url           String   @db.Text
  logo          String?  @db.Text
  visits_count  Int      @default(0)
  is_sensitive  Boolean  @default(false)
  visibility    Boolean  @default(true)
  delete_flag   Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime
  category_name String
  category      category @relation(fields: [category_name], references: [name], map: "Site_category_name_fkey")

  @@index([category_name], map: "Site_category_name_fkey")
}
